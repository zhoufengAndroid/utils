<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.utils.zf.SlideSelectViewActivity">

    <com.utils.zf.myviews.views.SlideSelectView
        android:id="@+id/slideSelectView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp"
        android:clickable="true"
        app:circleColor="#00ffff"
        app:circleRadius="13dp"
        app:lineColor="#ff00ff"
        app:lineWidth="2dp"
        app:slideTextColor="#333333"
        app:slideTextSize="15sp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>
</LinearLayout>
