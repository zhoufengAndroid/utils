<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/common_rl_title"
    android:layout_height="48dp">
    <RelativeLayout
        android:id="@+id/common_rl_back"
        android:layout_width="60dp"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_width="20dp"
            android:layout_centerVertical="true"
            android:layout_height="20dp"
            android:src="@drawable/common_icon_back"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/common_tv_title"
        android:textColor="#39364D"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="75dp"
        android:singleLine="true"
        android:layout_marginRight="75dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/common_iv_icon_right"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/common_tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#d6d6d6"/>
</RelativeLayout>